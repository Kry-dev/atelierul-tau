extends layout.pug

block content
  include header.pug

  .cart.container
    h2 Coș de cumparaturi
    each val, index in Array(4).fill(0)
      .cart-item
        button.btn.btn-icon
          i.fa.fa-close
        .cart-item-image
          img(src=require('../assets/polizor.jpg'))
        .cart-item-details
          .cart-item-desc
            h3 Makita GA5030 Polizor unghiular 720 W
            div
              .badge.badge-secondary În stoc furnizor
              small.text-muted Te vom contacta pentru termenul de livrare
            table.delivery-warranty
              tr
                td
                  i.fa.fa-truck
                  |  Livrare
                td 14,99 Lei
              tr
                td
                  i.fa.fa-certificate
                  |  Garanție
                td 24 luni - persoane fizice <br/> 12 luni - persoane juridice
          .cart-item-qty
            input.form-control(type="number", value="1")
            |  buc.
          .cart-item-price
            span.cart-item-price-new 460<sup>99</sup> <span class="cart-item-currency">Lei</span>
            span.cart-item-price-old <s>713<sup>99</sup></s> <span class="cart-item-currency">Lei</span>
            div
              .badge.badge-discount Reducere 12%
        .cart-item-footer
          a(href="#") Vezi piese și accesorii pentru acest produs
    .cart-item.cart-voucher
      h4 Card cadou
      p Ai un voucher de reduceri sau card cadou? Îl poți folosi mai jos:
      .row
        .col-md-8
          input.form-control(type="text", placeholder="Introdu codul cardului aici...")
        .col-md-4
          button.btn.btn-secondary.btn-block Adaugă cod la comandă
  .cart-footer-wrapper
    .cart-footer
      .container
        .cart-summary-wrapper
          .cart-summary
            h4 Sumar comandă
            p Total produse <span class="cart-summary-amount">3.999<sup>99</sup> Lei</span>
            p Cost livrare <span class="cart-summary-amount">15<sup>99</sup> Lei</span>
        .cart-total
          h4 Total
          p 5.999<sup>99</sup>&nbsp;Lei
        .cart-order
          button.btn.btn-at.btn-block.btn-lg
            | Comandă
            i.fa.fa-chevron-right
  .cart-services
    .container
      .services-item
        .services-icon
          i.fa.fa-lock
        .services-title Cumperi în siguranță
        .services-content Toate datele sunt transmise securizat pentru cumparaturi in deplina siguranta
      .services-item
        .services-icon
          i.fa.fa-phone
        .services-title Suport telefonic
        .services-content Sună-ne la <a href="">0374.770.344</a> de <b>Luni până vineri</b> între <b>8-18</b> și <b>Sâmbăta</b> între <b>8-14</b>
      .services-item
        .services-icon
          i.fa.fa-undo
        .services-title 30 de zile drept de retur
        .services-content Pentru toate produsele vândute de AtelierulTău.ro
      .services-item
        .services-icon
          i.fa.fa-map-marker
        .services-title Adresa showroom
        .services-content Bld. Gheorghe Șincai nr. 13, bl. 5, ap. 1, inerfon 01, București.
      .services-item
        .services-icon
          i.fa.fa-clock-o
        .services-title Program showroom
        .services-content Luni - Vineri: 09:00 - 18:00. Sâmbătă: 09:00 - 14:00.
      .services-item
        .services-icon
          i.fa.fa-info-circle
        .services-title Alte informații
        .services-content <a href="#">Metode de plată<a> <a href="#">Transport și livrare</a> <a href="#">Garanție</a> <a href="#">Despre noi</a>
  .footer-copy
    .container
      span &copy; 2016 AtelierulTau.ro